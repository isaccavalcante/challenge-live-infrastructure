{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "amzn2-ami-hvm-2.0.*.1-x86_64-ebs",
            "root-device-type": "ebs"
          },
          "owners": [
            "amazon"
          ],
          "most_recent": true
        },
        "instance_type": "t2.small",
        "ssh_username": "ec2-user",
        "ami_name": "challenge-ami {{timestamp}}",
        "tags":{
          "Name": "Challenge AMI"
        }
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "script": "logstash.sh" 
      },
      {
        "type": "shell",
        "script": "apache.sh" 
      }
    ]
  }